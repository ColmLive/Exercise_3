@model Exercise_3.Models.Vehicle

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
</head>
<body>
	@using (Html.BeginForm("Index", "Home", FormMethod.Post))
	{
	<table cellpadding="0" cellspacing="0">
		<tr>
			<th colspan="2" align="center">Vehicle Details</th>
		</tr>
		<tr>
			<td>VehicleType: </td>
			<td>
				@Html.TextBoxFor(m => m.VehicleType, new { @Value = "Enter Name", @class = "red" })				
				@Html.DisplayFor(m => m.VehicleType)

			</td>
		</tr>
		<tr>
			<td>VehicleCategory: </td>
			<td>
				@Html.TextBoxFor(m => m.VehicleCategory)
				@Html.DisplayFor(m => m.VehicleCategory)
			</td>
		</tr>
		<tr>
			<td>VehicleTag: </td>
			<td>
				@Html.DropDownListFor(m => m.VehicleTag, new List<SelectListItem>
			   { new SelectListItem{Text="Yes", Value="Y"},
				 new SelectListItem{Text="No", Value="N"}}, "Please select")
				@Html.DisplayFor(m => m.VehicleTag)
			</td>
		</tr>
		<tr>
			<td>VehicleCost: </td>
			<td>
				@Html.TextBoxFor(m => m.VehicleCost)
				@Html.DisplayFor(m => m.VehicleCost)
			</td>
		</tr>
		<tr>
			<td>VehicleDiscCost: </td>
			<td>
				@Html.TextBoxFor(m => m.VehicleDiscCost)
				@Html.DisplayFor(m => m.VehicleDiscCost)
			</td>
		</tr>
		<tr>
			<td></td>
			<td><input type="submit" value="XSubmit" /></td>
		</tr>
	</table>
	}
</body>
</html>
